{
  "manifest_version": 3,
  "name": "OpenGrok Modern Boost",
  "version": "1.0.0",
  "description": "Modernizes OpenGrok's interface with better styling and GitHub integration",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/xref/*",
        "*://*/search*",
        "*://*/source/*"
      ],
      "css": ["styles.css"],
      "js": [
        "content.js",
        "opengrok-themes.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.svg"
    }
  },
  "icons": {
    "128": "icons/icon.svg"
  }
}